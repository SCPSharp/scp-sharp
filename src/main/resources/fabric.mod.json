{
  "schemaVersion": 1,
  "id": "scpsharp",
  "version": "${version}",
  "name": "SCP: Sharp",
  "description": "SCP: Sharp is a mod for Minecraft about SCP Foundation!",
  "authors": [
    "xtexChooser"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },
  "license": "LGPL-3.0",
  "icon": "assets/scpsharp/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "com.xtex.scpsharp.InitializersKt::initMain"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "com.xtex.scpsharp.InitializersKt::initClient"
      }
    ],
    "modmenu": [
      {
        "adapter": "kotlin",
        "value": "com.xtex.scpsharp.integrate.ModMenuIntegrate"
      }
    ],
    "rei": [
      {
        "adapter": "kotlin",
        "value": "com.xtex.scpsharp.integrate.rei.REIServerPlugin"
      },
      {
        "adapter": "kotlin",
        "value": "com.xtex.scpsharp.integrate.rei.REIClientPlugin"
      }
    ]
  },
  "mixins": [
    "scpsharp.mixins.json"
  ],
  "depends": {
    "fabricloader": "*",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": "*",
    "fabric-language-kotlin": "*"
  },
  "suggests": {
    "modmenu": "*",
    "rei": "*"
  }
}